<h3>以下の内容で、登録する</h3>
<section class="function container-fluid">
  <div class="row">
    <div class="col-xs-offset-2 col-xs-8 col-xs-offset-2 col-sm-offset-3 col-sm-6 col-sm-offset-3">
      <%= form_for(@mypowner) do |f| %>
      <!-- `f.hidden_field`を使用して、リクエストパラメータに値を設定できるようにしています。 -->
        <%= f.hidden_field :owner_name %>
        <%= f.hidden_field :owner_address %>
        <%= f.hidden_field :owner_bank_account %>
      <!-- @blog.titleと@blog.contentとすることで、表示用の値を画面に出力しています。 -->
        <div class="panel panel-danger">
          <div class="panel-heading">
            <h3><%= @mypowner.owner_name %></h3> 様の登録情報
          </div>

          <div class="panel-body">
            住所：<br><%= @mypowner.owner_address %><br><br>
            銀行口座：<br><%= @mypowner.owner_bank_account %>
          </div>

          <div class="panel-footer">
            <%= f.submit "登録する", class: 'btn btn-danger btn-sm' %>
          </div>
        </div>
      <% end %>

      <%= form_for(@mypowner, url: new_mypowner_path, method: 'get') do |f| %>
        <%= f.hidden_field :owner_name %>
        <%= f.hidden_field :owner_address %>
        <%= f.hidden_field :owner_bank_account %>
        <%=  f.submit "もどる", name: 'back' , class: 'btn btn-danger btn-sm' %>
      <% end %>
    </div>
  </div>
</section>
