<h1>個人情報入力欄</h1>
<br>
<section class="function container-fluid">
  <div class="row">
    <div class="col-xs-offset-2 col-xs-8 col-xs-offset-2 col-sm-offset-3 col-sm-6 col-sm-offset-3">
      <%= form_for(@mypowner) do |f| %>
        <h3>氏名</h3>
        <%= f.text_area :owner_address, :size=>"50x1" , class: 'form-control' , placeholder: "フルネームで記載、ふりがなは不要"%>
        <h3>住所</h3>
        <%= f.text_area :owner_address, :size=>"50x5", class: 'form-control' , placeholder: "建物名やマンションの何号室まで記入"%>
        <br>
        <h3>登録銀行口座</h3>
        <%= f.text_area :owner_bank_account, :size=>"50x1", class: 'form-control', placeholder: "ハイフン不要、銀行番号支店番号口座番号の順に記入：00011230123456" %>
        <br>
        <br>
        <%= f.submit '登録', class: 'btn btn-danger btn-block' %>
      <% end %>
    </div>
  </div>
</section>
