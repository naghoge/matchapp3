<div class="container">
  <div class="wrapper col-md-offset-2 wrapper col-md-8 col-md-offset-2 col-sm-10">
    <h2>土地を貸したい人のサインアップ</h2>
    <br><br>
    <%= alert %>
    <br><br>
    <%= form_for(resource, as: resource_name, url: owner_registration_path) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
      </div>
      <br><br>
      <div class="field">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
      </div>
      <br><br>
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "パスワード（確認）" %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "サインアップ", class: "btn btn-danger btn-lg btn-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
